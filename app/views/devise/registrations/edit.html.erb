<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group w-50">
    <div class="row">
      <div class="col-sm-4">
        <% if resource.avatar.attached? %>
          <%= image_tag resource.avatar.variant(resize_to_limit: [100, nil]), class: "rounded-circle" %>
        <% else %>
          <%= image_tag 'avatars/stock_avatar.jpg', size: 100, class: "rounded-circle" %>
        <% end %>
      </div>
      <div class="col-sm-8">
        <%= f.label :avatar, "Profile picture", class: "form-label" %>
        <%= f.file_field :avatar, class: "form-control form-control-lg mb-1" %>
      </div>
    </div>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <%= f.fields_for :user_information do |form| %>
    <div class="form-group w-50">
      <%= form.label :hometown, "Hometown", class: "form-label" %>
      <%= form.text_field :hometown,
                        class: "form-control form-control-lg mb-1",
                        placeholder: "Where are you from?" %>

      <%= form.label :about_me, "About Me", class: "form-label" %>
      <%= form.text_area :about_me,
                        size: "70x6",
                        class: "form-control form-control-lg mb-1",
                        placeholder: "Something about yourself..." %>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<div>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete %></div>

<%= link_to "Back", :back %>
