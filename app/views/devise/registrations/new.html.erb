<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <%= f.fields_for :user_information do |form| %>
    <div class="field">
      <%= form.label :first_name %><br />
      <%= form.text_field :first_name, autocomplete: "first-name" %>
    </div>

    <div class="field">
      <%= form.label :last_name %><br />
      <%= form.text_field :last_name, autocomplete: "last-name" %>
    </div>

    <div class="field">
      <%= form.label :date_of_birth %><br />
      <%= form.date_select :date_of_birth,
                           autocomplete: "date-of-birth",
                           start_year: Date.today.year - 120,
                           end_year: Date.today.year,
                           order: [:day, :month, :year] %>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
