<h1>Users</h1>
<%= render 'search_form', search_path: users_path, turbo_id: 'users' %>
<%= turbo_frame_tag "users" do %>
  <%= paginate @users, remote: true, theme: 'users' %>
  <% @users.each do |faceclone_user| %>
    <% friend_request = faceclone_user.friend_status(Current.user) || FriendRequest.new %>
    <%= render 'user_with_avatar', user: faceclone_user, avatar_resolution: 100, options: {data: { turbo_frame: "_top" }} %>
    <%= render 'friend_buttons', user: Current.user, other_user: faceclone_user, friend_request: %>
  <% end %>
  <%= paginate @users, remote: true, theme: 'users' %>
<% end %>
