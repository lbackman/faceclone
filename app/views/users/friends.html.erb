<h1>Friends</h1>
<%= render 'search_form', search_path: friends_user_path(@user), turbo_id: 'friends' %>
<%= turbo_frame_tag "friends" do %>
  <% @friends.each do |friend| %>
    <%= render 'user_with_avatar',
                user: friend,
                avatar_resolution: 100,
                options: { data: { turbo_frame: "_top" }, class: "user-avatar" } %>
  <% end %>
<% end %>

<%= link_to "Back to user page", user_path(@user) %> |
<%= link_to "Back to users", users_path %>
