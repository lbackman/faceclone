<h1>Friends</h1>
<% @friends.each do |friend| %>

  <div class="user_<%= friend.id %> mb-2">
    <%= link_to user_path(friend) do %>
      <%= render_user_avatar(friend, 100, class: "rounded thumbnail-lg") %>
      <%= friend.full_name %>
    <% end %>
  </div>

<% end %>

<%= link_to "Back to user page", user_path(@user) %> |
