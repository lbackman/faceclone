<div id="posts" class="container mb-5">
  <h1 class="fs-3">Posts feed</h1>
  <div class="mb-3">
    <%= render partial: 'form', locals: { author: Current.user, post: Post.new } %>
  </div>
  <%= render partial: 'index', locals: { posts: @posts, user: Current.user } %>
  <%= paginate @posts, theme: 'posts' %>
</div>
