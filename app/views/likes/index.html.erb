<h1>Likes index</h1>
<%= turbo_frame_tag "#{@type.downcase}_likes_#{@likeable.id}" do %>
  <p>Who liked this <%= @type.downcase %>:</p>
  <% @likes.each do |like| %>
    <%= render 'users/user_with_avatar',
                user: like.user,
                avatar_resolution: 100,
                options: {data: { turbo_frame: "_top" }} %>
  <% end %>
<% end %>
